<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epubtest.hxfy.epubtest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <Button
            android:id="@+id/bt_epub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPUB_TEST"/>

        <Button
            android:id="@+id/bt_pdf"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF_TEST"/>

        <Button
            android:id="@+id/bt_pdf2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF_TEST2"/>

        <Button
            android:id="@+id/bt_pdf4"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF_TEST4"/>

    </LinearLayout>


</RelativeLayout>
